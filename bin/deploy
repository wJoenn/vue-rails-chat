#!/usr/bin/env bash

echo "Building project..."
yarn vite:build

echo "Changing urls to prod..."
sed -i 's/http:\/\/localhost:3000/https:\/\/vue-on-rails-chat.herokuapp.com/g' public/assets/index-d5224b14.js
sed -i 's/ws:\/\/localhost:3000\/cable/ws:\/\/vue-on-rails-chat.herokuapp.com\/cable/g' public/assets/index-d5224b14.js

echo "Pushing to Heroku..."
git add .
git commit -m "Pushing to prod"
git push heroku master

echo "Cleaning up..."
git reset HEAD~
rm -rf public/assets
rm public/index.html

echo "Deployment complete!"
